# Hyperliquid API Configuration
HYPERLIQUID_API_URL=https://api.hyperliquid.xyz
HYPERLIQUID_WALLET_ADDRESS=
HYPERLIQUID_PRIVATE_KEY=

# Target wallet to copy
TARGET_WALLET_ADDRESS=0x0ba5de43fa2419a25c2e680f84aff3a8f57fce21

# Trading Mode
# SIMULATED_TRADING: Use simulated account (true) or live trading with real funds (false)
SIMULATED_TRADING=true

# SIMULATED_ACCOUNT_BALANCE: Starting balance for simulated account (in USD)
SIMULATED_ACCOUNT_BALANCE=1000.0

# Copy Trading Settings
# COPY_OPEN_POSITIONS: Copy existing positions when bot starts (true/false)
COPY_OPEN_POSITIONS=true

# COPY_EXISTING_ORDERS: Copy existing open orders when bot starts (true/false)
COPY_EXISTING_ORDERS=true

# AUTO_ADJUST_SIZE: Automatically adjust position sizes (true/false)
AUTO_ADJUST_SIZE=true

# MAX_OPEN_TRADES: Maximum number of concurrent positions (x = unlimited, or set a number like 5)
MAX_OPEN_TRADES=x

# MAX_OPEN_ORDERS: Maximum number of open orders (x = unlimited, or set a number like 10)
MAX_OPEN_ORDERS=x

# MAX_ACCOUNT_EQUITY: Stop copying when account equity reaches this value (x = unlimited, or set amount like 10000)
MAX_ACCOUNT_EQUITY=x

# Telegram Bot (optional - leave empty to disable)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Database
DATABASE_URL=sqlite:///./data/trading.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/trading.log
